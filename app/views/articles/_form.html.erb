
<div class="row">
  <div class="col-md-11">
<%= form_for(@article, class: "form-horizontal")  do |f|%>

  <% if @article.errors.any? %>
  <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Publish", class: "control-label" %>
    <%= f.radio_button :visibility, "true" %>

    <%= f.label "Private", class: "control-label" %>
    <%= f.radio_button :visibility, "false" %>
  </div>

<div class="form-group">

    <%= f.label :title, class: "control-label" %>
    <%= f.text_area :title, class: "form-control input-sm"  %>

</div>

<div class="form-group">

    <%= f.label :text, class: "control-label"  %>
    <%= f.text_area :text, :rows => 8, class: "form-control" %>

</div>

  <div class="form-group">

      <%= f.submit "Create Article", class: "btn btn-primary" %>

  </div>


<% end %>

</div>
</div>
