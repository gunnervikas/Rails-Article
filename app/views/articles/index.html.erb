<u><h1>Articles</h1></u>
<hr>

  <% @articles.each do |article| %>
    <div class="col-sm-11">
      <h3><b><%= link_to article.title, article %></b></h3>
      <b><i><%= article.created_at.strftime("%d, %B, %Y") %>&emsp;
                            <%="Author:"%>
                            <%= article.user.email %></b></i><br>
      <%= article.text %><br><br>
      <% if article.user == current_user %>
      <%= button_to 'Edit', edit_article_path(article),class: "btn-xs btn-primary", form: {style: 'display:inline-block;'}, :method => 'get' %>
      <%= button_to 'Delete', article_path(article), class: "btn-xs btn-primary", form: {style: 'display:inline-block;'},
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      <small>(Visible to you only)</small>
      <% end %>


        <hr>
      </div>

  <% end %>
